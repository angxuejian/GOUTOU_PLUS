/* miniprogram/pages/PageGoods/addUserAddress/addUserAddress.wxss */

.input-title {
  height: 50px;
  line-height: 50px;
  width: 90%;
  padding: 0 5%;
  /* background-color: black; */
  font-size: 12px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  opacity: 1;
}

.item-input {
  width: 100%;
  /* padding: 0 5%; */
  height: 50px;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-input > view {
  margin-left: 18px;
  width: 80%;
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
}

.item-input > view view {
  font-size: 12px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  width: 25%;
  margin-right: 20px;
}

.item-input > view input {
  width: 70%;
  font-size: 12px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  /* background-color: red; */
}

.item-input > view picker {
  width: 70%;
  font-size: 12px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.item-input > image {
  margin-right: 10px;
  width: 13px;
  height: 16px;
}

.item-desc {
  display: flex;
  /* align-items: center; */
  background-color: #fff;
  padding: 15px 0;
  justify-content: space-between;
}

.item-desc > view {
  font-size: 12px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  width: 22%;
  margin-right: 8px;
  margin-left: 18px;
}

.item-desc textarea {
  height: 67px;
  width: 60%;
  margin-right: 8px;
  font-size: 12px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  /* background-color: red; */
}
.item-desc image{
  width: 15px;
  height: 15px;
  margin-right: 15px;
  margin-top: 20px;
}

.input-desc {
  width: 90%;
  height: 78px;
  background-color: #fff;
  padding: 18px;
}

.input-desc textarea {
  /* border: 1px solid red; */
  width: 90%;
  height: 100%;
  font-size: 14px;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.defaults-address{
      height: 45px;
      width: 95%;
      padding: 0 2.5%;
      margin-top: 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      background-color: #fff;
}
.defaults-address > view:nth-of-type(1){
      font-size: 13px;
      color: #333;
}

.bottom{
  margin-bottom: 60px;
}
.bottom-but{
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 50px;
      background-color: #229794;
      text-align: center;
      line-height: 50px;
      font-size: 15px;
      color: #fff;

}