/* miniprogram/pages/PageGoods/goodsSearch/goodsSearch.wxss */

.search{
  width: 95%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 5px 2.5%;
  background-color: #fff;
  margin-bottom: 20px;
}
.input{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 80%;
  /* background-color: yellow; */
  padding: 10rpx 2.5%;
  border: 1px solid #eee;
  border-radius: 5px;
  padding: 0 2%;
}
.input image{
  width: 15px;
  height: 15px;
  margin-right: 10px;
}
.input input{
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
}
.but{
  width: 12%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 5px;
}


.all-goods{
  width: 95%;
  margin-top: 5px;
  background-color: rgb(255,255,255);
  padding: 10px 2.5%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.current-goods{
  width: 46%;
  height: 570rpx;
  margin: 5px 2%;
}
.current-goods image{
  width: 100%;
  height: 420rpx;
}
.current-goods view:nth-of-type(1) {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  /* background-color: blue; */
}
.current-goods view:nth-of-type(2) {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}