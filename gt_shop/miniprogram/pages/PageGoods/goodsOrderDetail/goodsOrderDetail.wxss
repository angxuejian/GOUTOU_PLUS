/* miniprogram/pages/PageGoods/orderDetail/orderDetail.wxss */
page{
  padding-top: 1px;
}
.order-address{
  width: 90%;
  margin: 0 auto;
  margin-top: 10px;
  padding: 30rpx 2.5%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 6px;
}
.info > view:nth-of-type(1) text:nth-of-type(2) {
  margin-left: 10px;
}
.info > view:nth-of-type(1) {
  margin-bottom: 8px;
}
.not-address{
  height: 100%;
  line-height: 100rpx;
  margin: 0;
}
.order-address image{
  width: 15px;
  height: 18px;
}

.order{
  width: 90%;
  margin: 0 auto;
  margin-top: 10px;
  padding: 2px 2.5%;
  border-radius: 6px;
  background-color: #fff;
}

.item-goods{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* padding: 10; */
  margin: 20px 0;
}
.item-goods image{
  width: 60px;
  height: 60px;
}
.goods-info{
  width: 75%;
  /* background-color: red; */
  height: 60px;
}
.goods-info > view:nth-of-type(1){
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 3px;
}
.goods-info > view:nth-of-type(1) text:nth-of-type(1){
  display: inline-block;
  width: 80%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.goods-info > view:nth-of-type(2){
  width: 100%;
  text-align: end;
  margin-bottom: 5rpx;
}
.goods-info > view:nth-of-type(3){

  width: 100%;
  margin: 0;
}

.all-price{
  width: 90%;
  margin: 10px auto;
  padding: 0 2.5%;
  height: 100rpx;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.prompt{
  width: 90%;
  margin: 0 auto;
  padding: 0 2.5%;
  height: 40rpx;
  line-height: 40rpx;
}
.now-pay{
  position: fixed;
  right: 2.5%;
  bottom: 10px;
  width: 90%;
  padding: 0 2.5%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border: 1px solid #333; */
}
