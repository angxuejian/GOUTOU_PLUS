/* miniprogram/pages/PageGoods/userOrderRefund/userOrderRefund.wxss */

.refund-title {
  height: 46px;
  width: 90%;
  margin: 0 auto;
  line-height: 46px;
  font-size: 14px;
  font-weight: 600;
  color: #333;
}

.refund-reason {
  width: 90%;
  padding: 0 5%;
  margin: 0 auto;
  height: 46px;
  line-height: 46px;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.refund-reason picker {
  width: 50%;
  height: 100%;
  font-size: 13px;
  color: #333;
}

.refund-reason image {
  width: 15px;
  height: 18px;
}

.refund-remark {
  width: 90%;
  padding: 10px 5%;
  background-color: #fff;
  height: 140px;
}

.refund-remark textarea {
  width: 95%;
  height: 130px;
  /* margin-top: 10px; */
  border: 1px solid #f5f5f5;
  border-radius: 5px;
  font-size: 13px;
  color: #333;
  padding: 5px 2.5%;
}

.req-ref {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  text-align: center;
  line-height: 50px;
  font-size: 15px;

}