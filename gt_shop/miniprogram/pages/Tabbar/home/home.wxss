/* miniprogram/pages/Tabbar/home/home.wxss */

.search{
  width: 90%;
  padding: 0 2%;
  margin: 10px auto;
  margin-top: 0px;
  border: 1px solid #eee;
  border-radius: 5px;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search image{
  width: 15px;
  height: 15px;
  margin-right: 10px;
}


swiper{
  width: 90%;
  height: 30vh;
  padding: 10px 2%;
  margin: 10px auto;
  border-radius: 5px;
  background-color: #fff;
  /* border-bottom: 1px solid #f5f5f5; */
}
swiper-item{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;

}
.current{
  width: 100%;
  height: 100%;
  transform: scale(0.95);
  border-radius: 5px;
}
.goods-module-title{
  height: 50px;
  line-height: 50px;
  text-align: center;
  margin: 0;
  padding: 0;
  width: 100%;
}
.all-goods{
  width: 95%;
  background-color: rgb(255,255,255);
  padding: 10px 0%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin: 10px auto;
  margin-top: 0px;
  border-radius: 5px;
}
.current-goods{
  width: 46%;
  height: 520rpx;
  margin: 0px 2%;
}
.current-goods image{
  width: 80%;
  height: 350rpx;
  margin-left: 10%;
}
.current-goods view:nth-of-type(1) {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.current-goods view:nth-of-type(2) {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

