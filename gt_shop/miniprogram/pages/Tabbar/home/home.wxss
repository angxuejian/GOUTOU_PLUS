/* miniprogram/pages/Tabbar/home/home.wxss */
swiper{
  width: 100%;
  height: 30vh;
  padding: 10px 0;
  background-color: #fff;
  /* border-bottom: 1px solid #f5f5f5; */
}
swiper-item{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;

}
.current{
  width: 100%;
  height: 100%;
  transform: scale(0.95);
  border-radius: 5px;
}
.all-goods{
  width: 95%;
  margin-top: 5px;
  background-color: rgb(255,255,255);
  padding: 10px 2.5%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.current-goods{
  width: 46%;
  height: 570rpx;
  margin: 5px 2%;
}
.current-goods image{
  width: 100%;
  height: 420rpx;
}
.current-goods view:nth-of-type(1) {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  /* background-color: blue; */
}
.current-goods view:nth-of-type(2) {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}