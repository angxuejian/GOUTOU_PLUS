/* miniprogram/pages/Tabbar/me/me.wxss */
.user-info{
  width: 100%;
  height: 350rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.user-info image{
  width: 80px;
  height: 80px;
  margin-bottom: 15px;
}

.down-fun{
  width: 95%;
  margin: 10px auto;
} 
.order-all{
  background-color: #fff;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%
}
.order-current{
  width: 25%;
  padding: 5px 0;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-evenly;
  position: relative;
}
.red-point{
  position: absolute;
  width: 12px;
  height: 12px;
  background-color: #DD001B;
  border-radius: 50%;
  right: 8px;
  top: 3px;
  color: #eee;
  line-height: 12px;
  text-align: center;
  font-size: 8px;
}
.order-current image{
  width: 28px;
  height: 28px;
  margin-bottom: 5px;
}

.item-fun{
  margin-top: 10px;
  width: 95%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 2.5%;
  height: 30px;
  position: relative;
}
.item-fun > view{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 30%;
}

.item-fun > image{
  width: 15px;
  height: 18px;
}
.but-contact{
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}
.but-contact:not([size='mini']){
  width: 100%;
  height: 100%;
}