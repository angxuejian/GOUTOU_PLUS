/* miniprogram/pages/Tabbar/shopping/shopping.wxss */
page{
  background: #fff;
}
.item-goods{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 5px 0;
  position: relative;
}
.info{
  width: 75%;
  border-bottom: 1px solid #f5f5f5;
  padding: 10px 0;
  margin-left: 5%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info image{
  width: 180rpx;
  height: 180rpx;
}
.info-number{
  width: 60%;
  height: 160rpx;
  padding: 10rpx 0;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
  /* background-color: red; */
}
.number{
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
}
.number > view{
  width: 10px;
  height: 10px;
  padding: 3px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.number > view image{
  width: 100%;
  height: 100%;
}
.number > view:nth-of-type(1), .number > view:nth-of-type(3){
  /* background-color: #DEDAFB; */
  border: 1px solid #999;
}
.price{
  width: 20%;
  height: 100%;
  text-align: center;
  /* background-color: blue; */
}
.add-remove{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 10px;
  bottom: 5px;
}




.bottom-but{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  /* height: 200rpx; */
  background-color: #fff;
}
.goods-price{
  width: 95%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 2.5%;
  /* border-bottom: 1px solid #f5f5f5; */
  margin-bottom: 10rpx;
}
.goods-price text{
  height: 100rpx;
  line-height: 100rpx;
}

.place-order{
  height: 100rpx;
  width: 100%;
  border-top: 1px solid #eee;
  text-align: center;
  line-height: 100rpx;
  text-align: center;
  border-radius: 15px 15px 0 0;

}