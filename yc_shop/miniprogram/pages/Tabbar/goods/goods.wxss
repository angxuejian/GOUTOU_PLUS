/* miniprogram/pages/Tabbar/goods/goods.wxss */
page{
  background-color: #FFFFFF;
  height: 100%;
}
.page-goods{
position: relative;
}
.all-type{
position: fixed;
left: 0px;
top: 0;
width: 27%;
height: 100%;
overflow: auto;
background-color:#f5f5f5;
border-right: 1px solid #eee;
}
.all-type view{
height: 40px;
line-height: 40px;
padding-left: 3%;
text-align: center;
}
.select-type{
background-color: #fff;
border-left: 3px solid #07C160;
}
.all-commodity{
position: absolute;
right: 0px;
top: 0;
width: 67%;
padding-right: 3%;
/* margin: 0 auto; */
/* background-color: red; */

}
.item-commodity{
width: 95%;
padding: 10px 2.5%;
border-radius: 4px;
/* background-color: red; */
display: flex;
align-items: center;
justify-content: space-between;
position: relative;
margin-bottom: 20px;
}
.item-commodity-image{
width: 60px;
height: 60px;
border-radius: 4px;
}
.item-commodity-info{
width: 60%;
display: flex;
flex-direction: column;
justify-content: space-between;
height: 60px;

}
.item-commodity-info > view:nth-of-type(1){
width: 100%;
white-space: nowrap;
text-overflow: ellipsis;
overflow: hidden;
font-weight: 500;
}

.add-commodity-shopping{
position: absolute;
width: 16px;
height: 16px;
right: 0;
bottom: 14.6px;
}