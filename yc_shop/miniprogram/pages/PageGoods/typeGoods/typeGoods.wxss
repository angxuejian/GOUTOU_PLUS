/* miniprogram/pages/PageGoods/typeGoods/typeGoods.wxss */

.all-goods{
  width: 95%;
  padding: 10px 0%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin: 10px auto;
  /* margin-top: 5px; */
  border-radius: 5px;
}
.current-goods{
  width: 46%;
  height: 520rpx;
  margin: 5px 2%;
  background-color: rgb(255,255,255);

}
.current-goods image{
  width: 80%;
  height: 350rpx;
  margin-left: 10%;
}
.current-goods view:nth-of-type(1) {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.current-goods view:nth-of-type(2) {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}