/* miniprogram/pages/PageGoods/userOrderDetail/userOrderDetail.wxss */
.goods{
  width: 90%;
  padding: 20px 2.5%;
  margin: 0 auto;
  display: flex;
  border-radius: 5px;
  align-items: center;
  justify-content: space-between;
  /* margin-bottom: 15px; */
  border-bottom: 1px solid #eee;
  background-color: #fff;
}
.goods image{
  width: 60px;
  height: 60px;
}
.goods-info{
  width: 75%;
  height: 60px;
}
.goods-info > view:nth-of-type(1){
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 3px;
}
.goods-info > view:nth-of-type(1) text:nth-of-type(1){
  display: inline-block;
  width: 80%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.goods-info > view:nth-of-type(2){
  width: 100%;
  text-align: end;
  margin-bottom: 5rpx;
}
.goods-info > view:nth-of-type(3){
  width: 100%;
  margin: 0;
}

.all-price{
  width: 90%;
  margin: 0px auto;
  padding: 0 2.5%;
  height: 100rpx;
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 20px;
  
}
.all-price > text:nth-of-type(1){
  margin-right: 15px;
}

.item-title{
  width: 96%;
  margin: 0 auto;
  height: 100rpx;
  line-height: 100rpx;
}
.matter-log-msg{
  width: 96%;
  margin: 0 auto;
  padding: 10px 0;
  /* border-bottom: 1px solid #eee; */
}
.item-msg .matter-log-msg:nth-last-of-type(1){
  margin-bottom: 10px;
  padding-bottom: 10px;
  border-bottom: 1px solid #eee;
}

.order-msg{
  /* border-top: 1px solid #eee; */
  border-bottom: 1px solid #eee;
  padding: 10px 0;
  width: 96%;
  margin: 0 auto;
}
.order-number-msg{
  width: 100%;
  margin-bottom: 5px;
}
.order-number-msg > text:nth-of-type(1){
  margin-right: 15px;
}
.prompt{
  width: 96%;
  margin: 0 auto;
  padding: 0 2%;
  height: 100rpx;
  line-height: 100rpx;
}
.serve{
  position: fixed;
  bottom: 200rpx;
  right: 20px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  z-index: 66;
}
.serve image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.serve-but{
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
.serve-but:not([size='mini']){
  width: 100%;
  height: 100%;
}

.order-confirm{
  z-index: 66;
  height: 120rpx;
  width: 100%;
  border-top: 1px solid #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.order-confirm > text:nth-of-type(1){
  margin: 0 8px;
  margin-right: 9px;
}
.order-confirm > view{
  /* width: 15%; */
  height: 70rpx;
  /* background-color: red; */
  line-height: 70rpx;
  padding: 0px 5px;
  border-radius: 5px;
  text-align: center;
  margin:0 10px;

}
.border{
  border: 1px solid #eee;
  
}