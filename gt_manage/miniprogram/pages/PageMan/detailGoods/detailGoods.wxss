/* miniprogram/pages/PageMan/detailGoods/detailGoods.wxss */

swiper{
  width: 100%;
  height: 45vh;
  z-index: -1;
}
swiper-item{
  width: 100%;
  height: 100%;
}
swiper-item image{
  width: 100%;
  height: 100%;
}

.goods{
  width: 100%;
  width: 96%;
  padding: 2%;
}


.item-box{
  padding: 5px 0;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.item-title{
  width: 96%;
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
}
.item-spec{
  padding-bottom: 10px;
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 1px solid #eee;
}
.sub-item-spec{
  padding: 2px 10px;
  border: 1px solid #ddd;
  margin: 8px;
  border-radius: 40px;
}
.sub-selected-item-spce{
  border: 1px solid #333;
}
.item-detail{
  margin-top: 10px;
}
.item-detail image{
  width: 100%;
  height: 600rpx;
  display: block;
}

.show-spec{
  position: fixed;
  bottom: 200rpx;
  right: 20px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  z-index: 66;
}
.show-spec image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}




.goods-box{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.6);
  z-index: 67;
}
.goods-info{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 400px;
  width: 96%;
  padding: 2%;
  z-index: 68;
  background-color: #fff;
}
.remove{
  position: absolute;
  top: 10px;
  right: 10px;
  width: 18px;
  height: 18px;
}
.info{
  width: 95%;
  padding: 0 2.5%;
  border-bottom: 1px solid #f5f5f5;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.info > image{
  width: 80px;
  height: 80px;
  border-radius: 5px;
}
.info > view{
  width: 68%;
  display: flex;
  height: 80px;
  flex-direction: column;
  justify-content: flex-end;
}
.info > view >view:nth-of-type(1){
  margin-bottom: 5px;
}
