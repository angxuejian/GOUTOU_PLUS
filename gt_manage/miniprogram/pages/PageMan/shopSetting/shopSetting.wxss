/* miniprogram/pages/PageMan/shopSetting/shopSetting.wxss */

.my-id{
  width: 95%;
  padding: 0 2.5%;
  background-color: #fff;
  margin-bottom: 10px;
}
.item-input{
  display: flex;
  align-items: center;
  /* justify-content: center; */
  /* justify-content: space-between; */
  height: 40px;
  border-bottom: 1px solid #ededed;
}
.item-input > view{
  width: 40%;
  margin: 0 10px;
}
.item-input > view:nth-of-type(1){
  width: 10%;
}
.item-input > input{
  width: 10%;
}

.head{
  background-color: #fff;
  padding-bottom: 10px;
  margin-top: 15px;
}
swiper{
  width: 95%;
  height: 45vh;
  z-index: -1;
  margin: 0 auto;
}
swiper-item{
  width: 100%;
  height: 100%;
}
swiper-item > image{
  width: 100%;
  height: 100%;
}
swiper-item .add-view{
  width: 95%;
  height: 90%;
  margin: 5% auto;

  position: relative;
}
.add-view view{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-view  .add{
  width: 40px;
  height: 40px;
}
.add-view view .show-image{
  width: 100%;
  height: 100%;
}
swiper-item view .remove{
  position: absolute;
  right: -6px;
  top: -6px;
  width: 18px;
  height: 18px;
}
.prompt{
  width: 96%;
  margin: 0 auto;
  padding: 0 2%;
  height: 50rpx;
  line-height: 50rpx;
}
.bottom{
  position: fixed;
  bottom: 0;
  z-index: 999;
  left: 0;
  width: 100%;
  height: 50px;
  border-top: 1px solid #eee;
  text-align: center;
  line-height: 50px;
  box-shadow: 0 0 2px 2px #eee;
}