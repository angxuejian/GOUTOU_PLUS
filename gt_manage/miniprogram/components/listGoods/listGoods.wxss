/* components/listGoods/listGoods.wxss */

.item-goods{
  width: 90%;
  padding: 0px 2.5%;
  margin: 15px auto;
  border-bottom: 1px solid #cdcdcd;
  border-radius: 5px;
  margin-bottom: 40px;
}
.item-goods .goods{
  width: 100%;
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
}
.item-goods .goods image{
  width: 70px;
  height: 70px;
  border-radius: 5px;
}
.item-goods .goods .info{
  width: 70%;
  /* background-color: red; */
}
.item-goods .goods .info view:nth-of-type(1){
  margin-bottom: 10px;
  font-size: 14px;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-goods .goods .info view:nth-of-type(2){
  font-size: 14px;
  color: #333;
}
.item-goods .spec{
  margin-top: 10px;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.item-goods .spec text{
  padding: 2px 10px;
  border: 1px solid #ddd;
  margin: 3px;
  font-size: 13px;
  border-radius: 40px;
}

.item-goods .button{
  margin-top: 10px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 10px;
}
.item-goods .button view{
  border: 1px solid #333;
  font-size: 13px;
  width: 40px;
  text-align: center;
  height: 20px;
  line-height: 20px;
  margin: 0 3px;
}
